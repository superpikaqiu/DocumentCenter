<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>文档协作平台</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="layui-layout layui-layout-admin">
        <div class="layui-header">
            <div class="layui-logo">文档协作平台</div>
            <ul class="layui-nav layui-layout-right">
                <li class="layui-nav-item">
                    <span id="userName" style="padding:0 20px;display:block;"></span>
                    <dl id="logoutBtn" class="layui-nav-child">
                        <dd><a href="javascript:void(0);" onclick="logout();">退出登录</a></dd>
                    </dl>
                </li>
            </ul>
        </div>

        <div class="layui-side layui-bg-black">
            <div class="layui-side-scroll">
                <!-- 左侧导航区域（可配合layui已有的垂直导航） -->
                <ul class="layui-nav  layui-nav-tree" lay-filter="test" id="leftMenu">
                    <li class="layui-nav-item layui-nav-itemed" id="menu-personal">
                        <a class="javascript:;" href="javascript:;">个人空间</a>
                        <dl class="layui-nav-child">
                            <dd id="nav-myfile"><a href="/myfile/index">我的文档</a></dd>
                            <dd id="nav-share"><a href="/fileshare/index">与我共享</a></dd>
                        </dl>
                    </li>
                    <li class="layui-nav-item layui-nav-itemed" id="menu-designVolume" style="display:none">
                        <a href="/designVolume/index">项目空间</a>

                    </li>
                </ul>
            </div>
        </div>

        <div class="layui-body">
            <!-- 内容主体区域 -->
            @RenderBody()

        </div>

        <div class="layui-footer">
            <!-- 底部固定区域 -->
            <p>&copy; @DateTime.Now.Year </p>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")

    <script src="~/Scripts/layui/layui.js"></script>
    <script src="~/Scripts/layout/layout.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
